      </ComboBox>
      <DatePicker fx:id="prescriptionDate" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <GridPane.margin>
          <Insets left="5.0" />
        </GridPane.margin>
      </DatePicker>
