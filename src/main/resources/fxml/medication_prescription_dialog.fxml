      <VBox.margin>
        <Insets bottom="5.0" top="5.0" />
      </VBox.margin>
    </Separator>
    <GridPane prefHeight="275.0">
      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="75.0" />
