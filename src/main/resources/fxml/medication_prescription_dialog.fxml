      </padding>
    </Separator>
    <HBox alignment="CENTER" spacing="25.0">
      <VBox.margin>
        <Insets bottom="5.0" />
      </VBox.margin>
      <Button fx:id="add" mnemonicParsing="false" onMouseClicked="#onAddButtonClicked" text="Aceptar" />
      <Button fx:id="cancel" mnemonicParsing="false" onMouseClicked="#onCancelButtonClicked" text="Cancelar" />
    </HBox>
  </VBox>
</AnchorPane>
